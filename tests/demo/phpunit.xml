<phpunit
        colors="true"
        convertErrorsToExceptions="true"
        convertNoticesToExceptions="true"
        convertWarningsToExceptions="true"
        stopOnFailure="false">

    <testsuite name="TestTest">
        <file>tests/demo/suite/TestSuite.php</file>
    </testsuite>

    <logging>
        <log type="coverage-html" target="../../build/demo-coverage"
             title="Joomla-CMS PostgreSql" charset="UTF-8"
             yui="true" highlight="true"
             lowUpperBound="35" highLowerBound="70"/>
        <log type="coverage-clover" target="../../build/logs/clover-system-demo.xml"/>
        <log type="junit" target="../../build/logs/junit-system-demo.xml"
             logIncompleteSkipped="false"/>
    </logging>

</phpunit>
